# i3status configuration file
# see "man i3status" for documentation

general {
    colors = true
    interval = 5
    color_good = "#B5BD68"
    color_bad = "#CC6666"
    color_degraded = "#F0C674"
}

order += "disk /"
order += "disk /home"
order += "ethernet _first_"
order += "wireless _first_"
order += "load"
order += "cpu_usage"
order += "memory"
order += "tztime local"

disk "/" {
    format = " %avail"
    prefix_type = "decimal"
    low_threshold = 10
}

disk "/home" {
    format = " %avail"
    prefix_type = "decimal"
    low_threshold = 10
}

ethernet _first_ {
    format_up = " %ip (%speed)"
    format_down = ""
}

wireless _first_ {
    format_up = " (%quality at %essid) %ip"
    format_down = ""
}

load {
    format = " %1min"
    max_threshold = "4.0"
}

cpu_usage {
    format = " %usage"
    max_threshold = 75
}

memory {
    format = " %used / %total"
    threshold_degraded = "10%"
    threshold_critical = "5%"
}

tztime local {
    format = " %Y-%m-%d  %H:%M:%S"
}